# Firebase Configuration (Client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK (Server-side) - For webhooks and API routes
# Get these from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Lemon Squeezy Configuration
# API Key - Get from Lemon Squeezy Settings > API
LEMONSQUEEZY_API_KEY=your-api-key

# Store ID - Get from your Lemon Squeezy store settings
NEXT_PUBLIC_LEMONSQUEEZY_STORE_ID=your-store-id

# Product Variant IDs - Get from Lemon Squeezy Products > Variants
NEXT_PUBLIC_LEMONSQUEEZY_STARTER_VARIANT_ID=your-starter-variant-id
NEXT_PUBLIC_LEMONSQUEEZY_PRO_VARIANT_ID=your-pro-variant-id
NEXT_PUBLIC_LEMONSQUEEZY_ENTERPRISE_VARIANT_ID=your-enterprise-variant-id

# Webhook Secret - Get from Lemon Squeezy Settings > Webhooks
LEMONSQUEEZY_WEBHOOK_SECRET=your-webhook-secret

# Development - Set to 'true' to use Firebase Emulators
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false
NODE_ENV=development
